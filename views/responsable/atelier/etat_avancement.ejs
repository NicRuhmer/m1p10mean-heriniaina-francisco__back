                            <p>An item <br>
                                estimation:<%=diagnostiques[id].duration+" heure"%> <br>
                                quantité:<%=diagnostiques[id].qte"%>
                            </p> 
                            <a  role="button" data-bs-toggle="collapse" href="#coll<%=diagnostiques[id]._id%>" role="button" aria-expanded="false" aria-controls="coll<%=diagnostiques[id]._id%>">
                                description
                              </a>
                        </div>
                        <div class="collapse" id="coll<%=diagnostiques[id]._id%>">
                            <div class=" card-body">
                              Some placeholder content for the collapse component. This panel is hidden by default but revealed when the user activates the relevant trigger.
                            </div>
                          </div>
                        <hr>
                    </li>

                    <%}%>

