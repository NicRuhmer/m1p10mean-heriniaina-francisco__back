<%- include('../../includes/header_responsable_atelier') %>



    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Voiture déposer</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Liste</li>
                    </ol>
                </nav>

                <table class="table table-striped" id="list_reparation">
                    <thead class="bg-success text-white">
                        <tr>
                            <th scope="col">Déposition</th>
                            <th scope="col">Voiture</th>
                            <th scope="col">Matricule</th>
                            <th scope="cool">Genre</th>
                            <th scope="col">Client</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var id=0;id<reparations.length;id++){%>
                            <tr>
                                <td><%=moment(reparations[id].createdAt).format('DD MMMM YYYY')%></td>
                                <td><%=reparations[id].voiture.description%></td>
                                <td><%=reparations[id].voiture.matricule%></td>
                                <!--<td><%=reparations[id].voiture.num_serie%></td>-->
                                <td> <span class="text-primary"><%=reparations[id].voiture.genre%></span></td>
                                <td> <div>
                                        <p><%=reparations[id].voiture.client.name+" "+reparations[id].voiture.client.username%><br>
                                            <%=reparations[id].voiture.client.email%> <br>
                                            <%=reparations[id].voiture.client.contact%>
                                        </p>
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success
                                            dropdown-toggle"
                                            data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                            Plus
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a role="button" class="dropdown-item" onclick="accepter_reparation_client(<%=JSON.stringify(reparations[id]._id)%>)" href="#">Accepter</a></li>
                                            </ul>
                                    </div>
                                </td>
                            </tr>
                        <%}%>
                        
                    </table>
                </div>
            </div>
        </div>
        <%- include('../../includes/footer_responsable_atelier') %>