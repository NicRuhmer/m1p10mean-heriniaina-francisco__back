<%- include('../../includes/header_responsable_financier') %>



    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Facturation en attente </a></li>
                        <li class="breadcrumb-item active" aria-current="page">Liste</li>
                    </ol>
                </nav>

                <table class="table table-striped" id="list_reparation">
                    <thead class="bg-success text-white">
                        <tr>
                            <th scope="col">Déposition</th>
                            <th scope="col">Voiture</th>
                            <th scope="col">Matricule</th>
                            <th scope="col">Client</th>
                            <th scope="cool">Responsable</th>
                            <th scope="cool">Estimation</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var id=0;id<listes.length;id++){%>
                            <tr>
                                <td><%=moment(listes[id].data.createdAt).format('DD MMMM YYYY')%></td>
                                <td><%=listes[id].data.voiture.description%></td>
                                <td><%=listes[id].data.voiture.matricule%></td>
                                <td> <div>
                                        <p><%=listes[id].data.voiture.client.name+" "+listes[id].data.voiture.client.username%><br>
                                            <%=listes[id].data.voiture.client.email%> <br>
                                            <%=listes[id].data.voiture.client.contact%>
                                        </p>
                                    </div>
                                </td>
                                 <td> <div>
                                        <p><%=listes[id].data.employe.name%><br>
                                            <%=listes[id].data.employe.email%> <br>
                                            <%=listes[id].data.employe.contact%>
                                        </p>
                                    </div>
                                </td>
                                <td><%=listes[id].pourcentage%>%</td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success
                                            dropdown-toggle"
                                            data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                            Plus
                                        </button>
                                        <ul class="dropdown-menu">
                                             <li><a class="dropdown-item" href="/etat-davancement/<%=listes[id].data._id%>/reparation">L'état d'avancement</a></li>
                                            <li><a class="dropdown-item" href="/nouveau/<%=listes[id].data._id%>/facture">Création
                                                de la facture</a></li>
                                        
                                            </ul>
                                    </div>
                                </td>
                            </tr>
                        <%}%>
                       
                
                    </table>
                </div>
            </div>
        </div>
        <%- include('../../includes/footer_responsable_financier') %>