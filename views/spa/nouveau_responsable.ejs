
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Responsable</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Nouveau
                        </li>
                    </ol>
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                <div class="col-md-5">

                </nav>


                <div class=" shadow p-3 mb-5 bg-body rounded" >
                    <h5>Nouveau Responsable</h5>
                   
                    <id="form-new-resp">
                        <div class="mb-3">
                            <label for="exampleFormControlInput1"
                            class="form-label">Choisir...<span
                                class="text-danger">*</span></label>
                            <select class="form-select" id="role" name="role" aria-label="Default select example">
                                <% for(var id=0;id<roles.length;id++){%>
                                    <option value="<%=roles[id]._id%>"><%=roles[id].description%></option>
                                    <%}%>
                              </select>
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlInput1"
                                class="form-label">Nom Complet<span
                                    class="text-danger">*</span></label>
                            <input type="text" required class="form-control"
                                id="name" name="name"
                                placeholder="Nom complet">
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="exampleFormControlInput1"
                                        class="form-label">Email <span
                                            class="text-danger">*</span></label>
                                    <input type="Email" class="form-control"
                                        id="email" required
                                        placeholder="Email">
                                        <span class="text-danger" id="email_error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="exampleFormControlInput1"
                                        class="form-label">Contact <span
                                            class="text-danger">*</span></label>
                                    <input type="text" class="form-control"
                                        id="contact" name="contact" required
                                        placeholder="TÃ©lephone">
                                        <span class="text-danger" id="contact_error"></span>
                                </div>
                            </div>
                        </div>
                       
                        <div class="mb-3">
                            <label for="exampleFormControlInput1"
                                class="form-label">Adresse <span
                                    class="text-danger">*</span></label>
                            <input type="text" class="form-control"
                                id="adresse" name="adresse" required
                                placeholder="Adresse">
                                <span class="text-danger" id="adresse_error"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="exampleFormControlInput1"
                                        class="form-label">Salaire Net (Ar) <span
                                            class="text-danger">*</span></label>
                                    <input type="number" class="form-control"
                                        id="salaire" value="0" min="0" name="salaire" required
                                        placeholder="Salaire Net">
                                        <span class="text-danger" id="salaire_error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="exampleFormControlInput1"
                                        class="form-label">Mot de passe <span
                                            class="text-danger">*</span></label>
                                    <input type="password" class="form-control"
                                        id="password" name="password" required
                                        placeholder="Nouveau mot de passe">
                                        <span class="text-danger" id="password_error"></span>
                                </div>
                            </div>
                        </div>
                        
                       

                        <span class="text-danger" id="message_error"></span>
                        <span class="text-success" id="message_success"></span>
                        <div class="mb-3 d-flex justify-content-center">
                            <button type="button" class="btn btn-success "
                                id="submit_new_resp">Enregistrer</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>