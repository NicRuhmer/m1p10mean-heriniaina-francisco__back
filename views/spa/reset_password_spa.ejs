<%- include('../includes/header_admin') %>



    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Responsable</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Changer mot de passe
                            </li>
                    </ol>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-md-5">
               
                </nav>


                <div class=" shadow p-3 mb-5 bg-body rounded" id="form-new-spa">
                    <h5>Changer mot de passe</h5>

                    <div class="mb-3 mt-3">
                        <label for="exampleFormControlInput1"
                            class="form-label">Email<span
                                class="text-danger">*</span></label>
                        <input type="email" required class="form-control"
                            id="email"
                            placeholder="Email">
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1"
                            class="form-label">Ancient mot de passe<span
                                class="text-danger">*</span></label>
                        <input type="password" required class="form-control"
                            id="name"
                            placeholder="Ancient mot de passe">
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1"
                            class="form-label">Nouveau mot de passe <span class="text-danger">*</span></label>
                        <input type="password" class="form-control"
                            id="new_password" required
                            placeholder="Nouveau mot de passe">
                    </div>

                    <div class="mb-3">
                        <label for="exampleFormControlInput1"
                            class="form-label">Confirmez le mot de passe <span class="text-danger">*</span></label>
                        <input type="password" class="form-control"
                            id="confirm_password" required
                            placeholder="Confirmez le mot de passe">
                    </div>

                    <div class="mb-3 d-flex justify-content-center">
                        <button type="button" class="btn btn-success "
                            id="submit_spa">Modifier le mot de passe</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
